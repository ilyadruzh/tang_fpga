{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Gowin: Synthesis + FloorPlanner",
            "type": "shell",
            "command": "docker",
            "args": [
                "run", "--rm", "-it",
                // "-e", "DISPLAY=${DISPLAY}", "-v", "/tmp/.X11-unix:/tmp/.X11-unix",
                "-v", "${workspaceFolder}:/home/gowin/work",
                "gowin-docker",
                "bash", "-c", "xvfb-run /home/gowin/IDE/bin/gw_sh work.prj"
                // "/home/gowin/IDE/bin/gw_sh", // путь до gw_sh внутри контейнера
                // "work.prj" // имя вашего проектного файла, например
              ],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": []
        }
    ]
}